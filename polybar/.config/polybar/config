[module/pulseaudio]
type = custom/script
tail = true
;format-underline = ${colors.cyan}
label-padding = 2
label-foreground = ${colors.foreground}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = ~/.config/polybar/scripts/pulseaudio.sh --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" --sink-nickname "bluez_sink.E0_B6_55_DD_A2_B2.a2dp_sink: speakers" --sink-nickname "alsa_output.pci-0000_00_1f.3.analog-stereo:  Headphones" listen
click-left = exec pavucontrol &
click-right = ~/.config/polybar/scripts/pulseaudio.sh togmute
click-middle = ~/.config/polybar/scripts/pulseaudio.sh --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio.sh --volume-max 100 up
scroll-down = ~/.config/polybar/scripts/pulseaudio.sh --volume-max 100 down

