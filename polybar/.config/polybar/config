ramp-1 = 
ramp-2 = 

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1
format-font = 1
format-margin = 0
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-padding = 2

label-open = 
label-close =   
label-separator = | 

; reboot
menu-0-1 = 
menu-0-1-exec = menu-open-2
; poweroff
menu-0-2 = 
menu-0-2-exec = menu-open-3
; logout
menu-0-0 = 
menu-0-0-exec = menu-open-1

menu-2-0 = 
menu-2-0-exec = reboot

menu-3-0 = 
menu-3-0-exec = poweroff

menu-1-0 = 
menu-1-0-exec = i3-msg exit || openbox --exit

;Spotify modules
[module/spotify]
format-font =  1
type = custom/script
tail = true
; prefix symbol is shown before the text
;format-prefix = "   "
format = <label>
format-spacing = 2
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh
click-left = playerctl play-pause spotify

[module/spotify-prev]
format-font =  1
type = custom/script
exec = echo "      "
format = <label>
click-left = playerctl previous spotify

[module/spotify-play-pause]
format-font = 1
type = custom/ipc
hook-1 = echo "   "
hook-0 = echo "   "
initial = 1
click-left = playerctl play-pause spotify

[module/spotify-next]
format-font = 1
type = custom/script
exec = echo "  "
format = <label>
click-left = playerctl next spotify

